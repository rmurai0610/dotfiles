{
  "highlight.document.enable": false,
  "python.jediEnabled": false,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": ["compile_commands.json", ".ccls", ".root", ".git/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    }
  }
}
